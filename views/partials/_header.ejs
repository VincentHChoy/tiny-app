<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success justify-content-between">

    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/urls/">My URLs <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <% if(typeof username === 'undefined'){ %>

        <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
          <label for="longURL">Username:</label>
          <input class="form-control mr-sm-2" type="text" name="username" placeholder="Username"
            style="width: 300px; margin: 1em;">
          <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Submit</button>
        </form>
        <% }else{ %>
          <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
          <a style="margin: 1em"><b>Logged in as: <%= username %><b></b></a> <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">logout</button>
        </form>
          <% } %>
     </div>
  </nav>
</header>